<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_default">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TableRow>
                <TextView
                    android:text="보호자명"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>
                <EditText
                    android:id="@+id/h_Name"
                    android:hint="성함을 적어주세요."
                    android:layout_weight="8"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:backgroundTint="@color/white"/>
            </TableRow>
            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:text="회신 받을 연락처"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>
                <EditText
                    android:id="@+id/h_num"
                    android:hint="010-0000-0000"
                    android:inputType="phone"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:backgroundTint="@color/white"/>
            </TableRow>
            <TableRow android:layout_marginTop="30dp">
                <TextView
                    android:text="문진표"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>
                <Spinner
                    android:id="@+id/spn_questionNaire"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"/>
            </TableRow>
            <TableRow android:layout_marginTop="30dp">
                <TextView
                    android:text="상담날짜 선택"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>
                <ImageView
                    android:id="@+id/btn_DatePicker"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>
            </TableRow>
            <TableRow android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/h_date"
                    android:background="#1AFFFFFF"
                    android:padding="20dp"
                    android:text="2022-11-22"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>
            </TableRow>
            <TableRow android:layout_marginTop="30dp">
                <TextView
                    android:text="희망 시간"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>
                <Button
                    android:id="@+id/btn_TimePicker"
                    android:text="시간 정하기"
                    android:drawableRight="@android:drawable/ic_lock_idle_alarm"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:background="#1AFFFFFF"/>
            </TableRow>
            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/h_time"
                    android:background="#1AFFFFFF"
                    android:padding="20dp"
                    android:text="03:20"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>
            </TableRow>
            <TableRow android:layout_marginTop="30dp">
                <TextView
                    android:text="예상 비용안내 여부"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>
                <TextView android:text=" " android:layout_weight="8"></TextView>
            </TableRow>
            <RadioGroup
                android:id="@+id/h_radioGroup"
                android:layout_marginTop="10dp"
                android:background="#1AFFFFFF"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <RadioButton
                    android:id="@+id/h_radioYes"
                    android:text="예"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"/>
                <RadioButton
                    android:id="@+id/h_radioNo"
                    android:text="아니오"
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"/>
            </RadioGroup>
            <TableRow android:layout_marginTop="30dp">
                <TextView
                    android:text="병원 내원 사유"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>
                <TextView android:text=" " android:layout_weight="8"></TextView>
            </TableRow>
            <TableRow android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/h_reson"
                    android:background="#1AFFFFFF"
                    android:padding="20dp"
                    android:hint="50자 내외로 입력해주세요."
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />
            </TableRow>
            <TableRow android:layout_marginTop="30dp">
                <TextView
                    android:text="상담 참고 이미지"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>
                <TextView android:text=" " android:layout_weight="8"></TextView>
            </TableRow>
            <TableRow android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/btn_img"
                    android:src="@android:drawable/ic_menu_camera"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>
            </TableRow>
        </TableLayout>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:text="증상을 알 수 있는 사진을 첨부해주세요."
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/white"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <Button
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp"
                    android:id="@+id/btn_backTolist"
                    android:text="목록으로 이동"
                    android:layout_weight="1"
                    android:textColor="@color/purple"
                    android:textSize="20dp"
                    android:backgroundTint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp"
                    android:id="@+id/btn_send"
                    android:text="병원 예약 신청"
                    android:textColor="@color/purple"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>